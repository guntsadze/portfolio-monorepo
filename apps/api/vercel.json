{
  "version": 2,
  "builds": [
    { 
      "src": "vercel-adapter.js", 
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    { 
      "src": "/(.*)", 
      "dest": "vercel-adapter.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}